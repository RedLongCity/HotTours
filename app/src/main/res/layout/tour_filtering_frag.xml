<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_pro_2"
            >

            <LinearLayout
                android:id="@+id/from_city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:background="@color/background_white"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/from_city"
                    android:textColor="@color/details_text_head"
                    android:textSize="16dp"
                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/from_city_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:padding="2dp"
                        android:text="@string/anyCity"
                        android:textColor="@color/details_text_head"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        />
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/to_country_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="3"
                android:background="@color/background_white"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/to_country"
                    android:textColor="@color/details_text_head"
                    android:textSize="16dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/to_country_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:padding="2dp"
                        android:text="@string/anyCountry"
                        android:textColor="@color/details_text_head"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white">

            <LinearLayout
                android:id="@+id/hotel_rating_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:background="@color/color_pro_2"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/hotel_rating"
                    android:textColor="@color/text_color_white"
                    android:textSize="16dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hotel_rating_filters_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:padding="2dp"
                        android:text="@string/anyRating"
                        android:textColor="@color/text_color_white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/meal_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="3"
                android:background="@color/color_pro_2"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/meal_type"
                    android:textColor="@color/text_color_white"
                    android:textSize="16dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/meal_type_filters_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:padding="2dp"
                        android:scrollHorizontally="true"
                        android:text="@string/anyType"
                        android:textColor="@color/text_color_white"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </HorizontalScrollView>

            </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:background="@color/background_white"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/from_city"
                    android:textColor="@color/details_text_head"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/from_city_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/from_city_placeholder"
                    android:textColor="@color/details_text_head"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="3"
                android:background="@color/background_white"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/to_country"
                    android:textColor="@color/details_text_head"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/to_country_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/to_country_placeholder"
                    android:textColor="@color/details_text_head"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/hotel_rating"
                    android:textColor="@color/text_color_white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/hotel_rating_filters_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/hotel_rating_placeholder"
                    android:textColor="@color/text_color_white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="3"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/meal_type"
                    android:textColor="@color/text_color_white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/meal_type_filters_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/meal_type_placeholder"
                    android:textColor="@color/text_color_white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_white"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/date_from"
                    android:textColor="@color/details_text_head"
                    android:textSize="16dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/date_from_filters_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/date_from_placeholder"
                    android:textColor="@color/details_text_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="20dp"
            android:padding="2dp"
            android:text="@string/night_amount"
            android:textColor="@color/details_text_head"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.appyvet.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            custom:rangeBarColor="@color/details_text_content"
            custom:connectingLineColor="@color/colorPrimary"
            custom:pinColor="@color/pin_color"
            custom:tickColor="@color/pin_color"
            custom:tickStart="1"
            custom:tickInterval="1"
            custom:tickEnd="9"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

            </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="2dp"
            android:text="@string/travelers"
            android:textColor="@color/details_text_head"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_grey">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="4"
                android:background="@color/background_white"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/adults"
                    android:textColor="@color/details_text_head"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/adult_amount_filters_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/adults_placeholder"
                    android:textColor="@color/details_text_content"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="3"
                android:background="@color/background_white"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/children"
                    android:textColor="@color/details_text_head"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/children_amount_filters_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    android:padding="2dp"
                    android:text="@string/children_placeholder"
                    android:textColor="@color/details_text_head"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/but_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/find_button"
            android:textColor="#ffffff"
            android:background="@drawable/button"
            />

    </LinearLayout>


</ScrollView>
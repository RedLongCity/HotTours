                android:textSize="12sp"
                android:textColor="@color/details_text_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/adult_amount"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="2dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/details_text_head"/>
            />

            <TextView
                android:id="@+id/adult_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/adult_amount_placeholder"
                android:textSize="12sp"
                android:textColor="@color/details_text_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/children_amount"
                android:paddingTop="@dimen/activity_vertical_margin"

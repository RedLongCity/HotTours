<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/from_city"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="2dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/details_text_head"/>

            <TextView
                android:id="@+id/city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/from_city_placeholder"
                android:textSize="12sp"
                android:textColor="@color/details_text_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/hotel_name"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="2dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/details_text_head"/>
            />

            <TextView
                android:id="@+id/hotel_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/hotel_title_placeholder"
                android:textSize="12sp"
                android:textColor="@color/details_text_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/hotel_rating"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="2dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/details_text_head"/>
            />

            <TextView
                android:id="@+id/hotel_rating_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/hotel_rating_placeholder"
                android:textSize="12sp"
                android:textColor="@color/details_text_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="@string/meal_type"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="2dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/details_text_head"/>
